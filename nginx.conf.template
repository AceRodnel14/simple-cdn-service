server {
    listen 80;
    server_name ${SERVER_NAME};

    set_real_ip_from 0.0.0.0/0;
    real_ip_header X-Forwarded-For;
    real_ip_recursive on;

    location / {
        allow ${ALLOWED_LAN};
        deny all;

        root /usr/share/nginx/html;
        autoindex on;
        add_header Access-Control-Allow-Origin *;
    }
}

server {
    listen 80 default_server;
    server_name _;

    return 403;
}